<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.LoginAct">

        <ImageView
            android:id="@+id/login_symbol"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:src="@drawable/ic_login_v_symbolhdpi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="44dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/login_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="환영합니다!"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textColor="#212121"
            android:textSize="34dp"
            android:fontFamily="@font/notosanskr_bold"
            app:layout_constraintTop_toBottomOf="@+id/login_symbol"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/login_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비타민즈와 함께 건강 습관을 만들고,\n 더 멋진 하루를 보내세요!"
            android:fontFamily="@font/notosanskr_regular"
            android:textColor="#666666"
            android:textSize="18dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:lineHeight="29dp"
            app:layout_constraintTop_toBottomOf="@+id/login_welcome"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:id="@+id/google_login_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/google_login_btn_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/kakao_login_btn"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/google_logo"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구글로 시작하기"
                android:fontFamily="@font/notosanskr_regular"
                android:textSize="16dp"
                android:textColor="#212121" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/kakao_login_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/kakao_login_btn_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/naver_login_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="40dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/kakao_logo"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시작하기"
                android:fontFamily="@font/notosanskr_regular"
                android:textSize="16dp"
                android:textColor="#212121" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/naver_login_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/naver_login_btn_bg"
            app:layout_constraintLeft_toRightOf="@+id/kakao_login_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/naver_logo"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시작하기"
                android:fontFamily="@font/notosanskr_regular"
                android:textSize="16dp"
                android:textColor="#FFFFFF" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>